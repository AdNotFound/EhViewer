<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hippo.ehviewer.preference.AccountPreference
        android:key="account"
        android:summary="@string/settings_eh_account_name_tourist"
        android:title="@string/settings_eh_account_name"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="1"
        android:key="gallery_site"
        android:title="@string/settings_eh_gallery_site"
        app:entries="@array/gallery_site_entries"
        app:entryValues="@array/gallery_site_entry_values"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <com.hippo.ehviewer.preference.ImageLimitsPreference
        android:key="image_limits"
        android:summary="@string/settings_eh_image_limits_summary"
        android:title="@string/settings_eh_image_limits"
        app:iconSpaceReserved="false"
        app:negativeButtonText="@android:string/cancel"
        app:positiveButtonText="@string/settings_eh_reset" />

    <Preference
        android:key="uconfig"
        android:summary="@string/settings_eh_u_config_summary"
        android:title="@string/settings_eh_u_config"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="mytags"
        android:summary="@string/settings_eh_my_tags_summary"
        android:title="@string/settings_eh_my_tags"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="-1"
        android:entries="@array/night_mode_entries"
        android:entryValues="@array/night_mode_values"
        android:key="theme"
        android:title="@string/dark_theme"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:key="black_dark_theme"
        android:title="@string/settings_eh_black_dark_theme"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="0"
        android:key="launch_page"
        android:title="@string/settings_eh_launch_page"
        app:entries="@array/launch_page_entries"
        app:entryValues="@array/launch_page_entry_values"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="0"
        android:key="list_mode"
        android:title="@string/settings_eh_list_mode"
        app:entries="@array/list_mode_entries"
        app:entryValues="@array/list_mode_entry_values"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        android:defaultValue="8"
        android:key="detail_size_"
        android:max="12"
        android:title="@string/settings_eh_detail_size"
        app:iconSpaceReserved="false"
        app:min="6"
        app:showSeekBarValue="true"
        app:singleLineTitle="false" />

    <SeekBarPreference
        android:defaultValue="40"
        android:key="list_tile_size"
        android:max="60"
        android:title="@string/settings_eh_list_tile_thumb_size"
        app:iconSpaceReserved="false"
        app:min="20"
        app:showSeekBarValue="true"
        app:singleLineTitle="false" />

    <SeekBarPreference
        android:defaultValue="4"
        android:key="thumb_size_"
        android:max="10"
        android:title="@string/settings_eh_thumb_size"
        app:iconSpaceReserved="false"
        app:min="2"
        app:showSeekBarValue="true"
        app:singleLineTitle="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="thumb_show_title"
        android:title="@string/settings_eh_thumb_show_title"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="0"
        android:key="thumb_resolution"
        android:title="@string/settings_eh_thumb_resolution"
        app:entries="@array/thumb_resolution_entries"
        app:entryValues="@array/thumb_resolution_entry_values"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="force_eh_thumb"
        android:summary="@string/settings_eh_force_eh_thumb_summary"
        android:title="@string/settings_eh_force_eh_thumb"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="show_jpn_title"
        android:summary="@string/settings_eh_show_jpn_title_summary"
        android:title="@string/settings_eh_show_jpn_title"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="show_gallery_pages"
        android:summary="@string/settings_eh_show_gallery_pages_summary"
        android:title="@string/settings_eh_show_gallery_pages"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="show_gallery_comments"
        android:summary="@string/settings_eh_show_gallery_comments_summary"
        android:title="@string/settings_eh_show_gallery_comments"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        android:defaultValue="-101"
        android:key="comment_threshold"
        android:max="100"
        android:summary="@string/settings_eh_comment_threshold_summary"
        android:title="@string/settings_eh_comment_threshold"
        app:iconSpaceReserved="false"
        app:min="-101"
        app:showSeekBarValue="true"
        app:singleLineTitle="false" />

    <SeekBarPreference
        android:defaultValue="60"
        android:key="preview_num"
        android:max="200"
        android:title="@string/settings_eh_preview_num"
        app:iconSpaceReserved="false"
        app:min="0"
        app:showSeekBarValue="true"
        app:singleLineTitle="false" />

    <SeekBarPreference
        android:defaultValue="3"
        android:key="preview_size"
        android:max="10"
        android:title="@string/settings_eh_preview_size"
        app:iconSpaceReserved="false"
        app:min="1"
        app:showSeekBarValue="true"
        app:singleLineTitle="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="show_tag_translations"
        android:summary="@string/settings_eh_show_tag_translations_summary"
        android:title="@string/settings_eh_show_tag_translations"
        app:iconSpaceReserved="false" />

    <com.hippo.preference.UrlPreference
        android:key="tag_translations_source"
        android:title="@string/settings_eh_tag_translations_source"
        app:iconSpaceReserved="false"
        app:url="@string/settings_eh_tag_translations_source_url" />

    <Preference
        android:key="filter"
        android:summary="@string/settings_eh_filter_summary"
        android:title="@string/settings_eh_filter"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="cellular_network_warning"
        android:title="@string/settings_eh_metered_network_warning"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="request_news"
        android:title="@string/settings_eh_request_news"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:dependency="request_news"
        android:key="hide_hv_events"
        android:title="@string/settings_eh_hide_hv_events"
        app:iconSpaceReserved="false" />

</PreferenceScreen>
